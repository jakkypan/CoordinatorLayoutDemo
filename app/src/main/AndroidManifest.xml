<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.pan.coordinatorlayoutdemo">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".FloatingActionButtonSnackBar"/>
        <activity android:name=".CustomActivity"/>
        <activity android:name=".CustomActivity2"
                  android:theme="@style/Theme.AppCompat.Light.NoActionBar"/>
        <activity android:name=".AppBarLayoutFlagTest"
                  android:theme="@style/Theme.AppCompat.Light.NoActionBar"/>
        <activity android:name=".NestedActivity"
                  android:theme="@style/Theme.AppCompat.Light.NoActionBar"/>
        <activity android:name=".FollowingDemo" />
        <activity android:name=".ScrollDemo" />
        <activity android:name=".TabLayoutTopActivity"
                  android:theme="@style/Theme.AppCompat.Light.NoActionBar"/>
        <activity android:name=".CollapsingToolbarDemo"
                  android:theme="@style/Theme.AppCompat.Light.NoActionBar"/>

    </application>
</manifest>
